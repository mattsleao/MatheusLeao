using System;

class Program {
  public static void Main (string[] args) {
    int[] numero = new int[5] ;
    int i,soma=0, media;

    for(i=0;i<5;i++){
      Console.WriteLine("Digite o número {0}: ",i+1);
      numero[i] = int.Parse(Console.ReadLine());
      soma = soma+numero[i];
    }

    media = soma/5;

    Console.WriteLine("A soma dos números é {0} e a média é {1}", soma,media);
    Console.ReadKey();
    
    }
  }
